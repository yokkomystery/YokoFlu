{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "yaml": {
    "bracketSpacing": false
  },
  "overrides": [
    {
      "files": "**/*.yaml",
      "options": {
        "parser": "yaml",
        "bracketSpacing": false
      }
    },
    {
      "files": "**/*.yml",
      "options": {
        "parser": "yaml",
        "bracketSpacing": false
      }
    }
  ]
}
